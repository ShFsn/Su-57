<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
	<path>Aircraft/Su-57/Models/Cockpit/Parts/switch1.gltf</path>
	<model>
		<path>Aircraft/Su-57/Models/Cockpit/Parts/base1.gltf</path>
	</model>
	<animation>
		<type>pick</type>
		<object-name>switch</object-name>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<tooltip-id>mfd-bug</tooltip-id>
				<label>MFD %s</label>
				<property>instrumentation/mfd/day</property>
				<mapping>nasal</mapping>
				<script>
					var modes = ['Night', 'Day'];
					return modes[arg[0]];
				</script>
			</binding>
		</hovered>
		<visible>true</visible>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>instrumentation/mfd/day</property>
			</binding>
			<binding>
				<command>property-toggle</command>
				<property>sim/sound/switch1</property>
			</binding>
		</action>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>switch</object-name>
		<property>instrumentation/mfd/day</property>
		<interpolation>
			<entry><ind>0.0</ind><dep>-25</dep></entry>
			<entry><ind>1.0</ind><dep>25</dep></entry>
		</interpolation>
		<axis>
			<x>0.0</x>
			<y>1.0</y>
			<z>0.0</z>
		</axis>
	</animation>
</PropertyList>
