<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
	<path>Aircraft/Su-57/Models/Cockpit/Parts/switch2.gltf</path>
	<model>
		<path>Aircraft/Su-57/Models/Cockpit/Parts/base1.gltf</path>
	</model>
	<animation>
		<type>pick</type>
		<object-name>switch</object-name>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<tooltip-id>landing-lights-bug</tooltip-id>
				<label>Lights %s</label>
				<property>fdm/jsbsim/electric/switches/lights/landing</property>
				<mapping>nasal</mapping>
				<script>
					var modes = ['Taxi', 'OFF', 'Landing'];
					return modes[arg[0]];
				</script>
			</binding>
		</hovered>
		<visible>true</visible>
		<action>
			<button>0</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>fdm/jsbsim/electric/switches/lights/landing</property>
				<step>1</step>
				<min>0</min>
				<max>3</max>
				<wrap>1</wrap>
			</binding>
			<binding>
				<command>property-toggle</command>
				<property>sim/sound/switch1</property>
			</binding>
		</action>
		<action>
			<button>3</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>fdm/jsbsim/electric/switches/lights/landing</property>
				<step>1</step>
				<min>0</min>
				<max>3</max>
				<wrap>1</wrap>
			</binding>
			<binding>
				<command>property-toggle</command>
				<property>sim/sound/switch1</property>
			</binding>
		</action>
		<action>
			<button>4</button>
			<repeatable>true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>fdm/jsbsim/electric/switches/lights/landing</property>
				<step>-1</step>
				<min>0</min>
				<max>3</max>
				<wrap>1</wrap>
			</binding>
			<binding>
				<command>property-toggle</command>
				<property>sim/sound/switch1</property>
			</binding>
		</action>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>switch</object-name>
		<property>fdm/jsbsim/electric/switches/lights/landing</property>
		<interpolation>
			<entry><ind>0.0</ind><dep>-25</dep></entry>
			<entry><ind>2.0</ind><dep>25</dep></entry>
		</interpolation>
		<axis>
			<x>0.0</x>
			<y>-1.0</y>
			<z>0.0</z>
		</axis>
	</animation>
</PropertyList>
