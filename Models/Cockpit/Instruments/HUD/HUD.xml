		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>hud.hudBtClick(1, 0)</script>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>BT.AG</object-name>
