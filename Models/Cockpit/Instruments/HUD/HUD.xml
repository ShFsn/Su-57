			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>hud.hudBtClick(1, 1)</script>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>BT.AA</object-name>
