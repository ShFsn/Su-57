<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
    <name>autopilot</name>
    <modal type="bool">false</modal>
    <draggable>true</draggable>
    <resizable>true</resizable>
    <layout>vbox</layout>

    <!-- Т УПР -->
    <button>
        <pref-width>150</pref-width><pref-height>30</pref-height>
        <legend>Heading Hold</legend>
        <binding>
            <command>nasal</command>
            <script>libraries.autopilot(1)</script>
        </binding>
    </button>

    <!-- АВТ -->
    <button>
        <pref-width>150</pref-width><pref-height>30</pref-height>
        <legend>Automatic</legend>
        <binding>
            <command>nasal</command>
            <script>libraries.autopilot(2)</script>
        </binding>
    </button>

    <!-- H БАР -->
    <button>
        <pref-width>150</pref-width><pref-height>30</pref-height>
        <legend>Altitude Hold</legend>
        <binding>
            <command>nasal</command>
            <script>libraries.autopilot(3)</script>
        </binding>
    </button>

    <!-- АУТ -->
    <button>
        <pref-width>150</pref-width><pref-height>30</pref-height>
        <legend>Pitch Hold</legend>
        <binding>
            <command>nasal</command>
            <script>libraries.autopilot(4)</script>
        </binding>
    </button>

    <!-- OFF -->
    <button>
        <pref-width>150</pref-width><pref-height>30</pref-height>
        <legend>OFF</legend>
        <binding>
            <command>nasal</command>
            <script>libraries.autopilot(0)</script>
        </binding>
    </button>

    <!-- Close -->
    <button>
        <pref-width>150</pref-width><pref-height>30</pref-height>
        <legend>Close</legend>
        <binding>
            <command>dialog-close</command>
        </binding>
        <binding>
            <command>dialog-apply</command>
        </binding>
    </button>
</PropertyList>
