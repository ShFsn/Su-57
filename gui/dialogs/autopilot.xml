<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
    <name>autopilot</name>
    <modal type="bool">false</modal>
    <draggable>true</draggable>
    <resizable>true</resizable>
    <layout>vbox</layout>

    <checkbox>
        <label>Maneuver</label>
        <halign>fill</halign>
        <property>fdm/jsbsim/fcs/maneuver</property>
        <live>true</live>
        <binding>
            <command>dialog-apply</command>
        </binding>
    </checkbox>

    <!-- Т УПР -->
    <checkbox>
        <label>Heading Hold</label>
        <halign>fill</halign>
        <property>sim/gui/dialogs/autopilot/heading-active</property>
        <live>true</live>
        <binding>
            <command>dialog-apply</command>
        </binding>
        <binding>
            <command>nasal</command>
            <script>libraries.autopilot(1)</script>
        </binding>
    </checkbox>

    <!-- АВТ -->
    <checkbox>
        <label>Automatic</label>
        <halign>fill</halign>
        <property>sim/gui/dialogs/autopilot/automatic-active</property>
        <live>true</live>
        <binding>
            <command>dialog-apply</command>
        </binding>
        <binding>
            <command>nasal</command>
            <script>libraries.autopilot(2)</script>
        </binding>
    </checkbox>

    <!-- H БАР -->
    <checkbox>
        <label>Altitude Hold</label>
        <halign>fill</halign>
        <property>sim/gui/dialogs/autopilot/altitude-active</property>
        <live>true</live>
        <binding>
            <command>dialog-apply</command>
        </binding>
        <binding>
            <command>nasal</command>
            <script>libraries.autopilot(3)</script>
        </binding>
    </checkbox>

    <!-- АУТ -->
    <checkbox>
        <label>Pitch Hold</label>
        <halign>fill</halign>
        <property>sim/gui/dialogs/autopilot/pitch-active</property>
        <live>true</live>
        <binding>
            <command>dialog-apply</command>
        </binding>
        <binding>
            <command>nasal</command>
            <script>libraries.autopilot(4)</script>
        </binding>
    </checkbox>
</PropertyList>
